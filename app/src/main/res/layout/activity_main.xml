<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text_view_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Pokemon App"
        android:textAlignment="center"
        android:textSize="24sp" />


    <EditText
        android:id="@+id/edit_text_pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_app_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:hint="Enter Pokemon Name"
        android:inputType="text"
        android:padding="12dp" />

    <Button
        android:id="@+id/button_search_pokemon_by_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_app_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/edit_text_pokemon_name"
        android:padding="12dp"
        android:text="Search" />


    <androidx.recyclerview.widget.RecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recycler_view_pokemons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edit_text_pokemon_name"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</RelativeLayout>




